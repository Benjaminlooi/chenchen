{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://chenchen.app/schemas/provider-config-v1.json",
  "title": "Provider Selector Configuration",
  "description": "CSS selector configuration for locating chat interface elements on LLM provider websites",
  "type": "object",
  "required": ["version", "providers"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version following semantic versioning (MAJOR.MINOR.PATCH)"
    },
    "providers": {
      "type": "object",
      "required": ["ChatGPT", "Gemini", "Claude"],
      "properties": {
        "ChatGPT": {
          "$ref": "#/definitions/ProviderConfig"
        },
        "Gemini": {
          "$ref": "#/definitions/ProviderConfig"
        },
        "Claude": {
          "$ref": "#/definitions/ProviderConfig"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "ProviderConfig": {
      "type": "object",
      "required": [
        "provider_id",
        "config_version",
        "input_selectors",
        "submit_selectors",
        "auth_check_selectors",
        "last_updated"
      ],
      "properties": {
        "provider_id": {
          "type": "string",
          "enum": ["ChatGPT", "Gemini", "Claude"],
          "description": "Provider identifier"
        },
        "config_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Provider-specific config version"
        },
        "input_selectors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "CSS selectors for chat input element (textarea/input), tried in order until match found"
        },
        "submit_selectors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "CSS selectors for submit button, tried in order until match found"
        },
        "auth_check_selectors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "CSS selectors indicating unauthenticated state (login button, auth-required message), presence means not logged in"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last configuration update"
        },
        "notes": {
          "type": "string",
          "description": "Optional notes about selector changes or provider DOM structure"
        }
      },
      "additionalProperties": false
    }
  }
}
